<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:elevation="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    android:orientation="vertical"
    >
    
    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image"
            android:layout_marginTop="15dp"
            ></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_notofication"
            android:textColor="@color/colorPrimary"
            android:text="username"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/image_notification"
            ></TextView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/request_accept_btn"
            android:layout_below="@+id/name_notofication"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="79dp"
            android:layout_marginRight="79dp"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:text="Accept Friend Request"
            android:background="@color/colorPrimary">

        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/request_decline_btn"
            android:layout_below="@+id/request_accept_btn"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="79dp"
            android:layout_marginRight="79dp"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:text="Cancel Friend Reques"
            android:background="@android:color/holo_blue_light">

        </Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>